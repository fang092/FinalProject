<% provide(:title, "Draft") %>
<div class="formsjumbotron jumbotron">	
	<h1>Draft pick</h1>

	<div class="row">
	  <div class="col-md-6 col-md-offset-3">
	    <%= form_for(@pick) do |f| %>

	      <%= f.label :round %>
	      <%= f.text_field :round, class: 'form-control', value: @pick.round %>

	      <%= f.label :pick %>
	      <%= f.text_field :pick, class: 'form-control', value: @pick.pick %>

	      <%= f.label :user %>
	      <%= f.text_field :user, class: 'form-control', value: current_user.name %>

	      <%= f.label :team %>
	      <%= f.text_field :team, class: 'form-control', value: @pick.team %>

	      <%= f.label :player %>
	      <%= f.text_field :player, class: 'form-control' %>

	      <%= f.submit "Submit", class: "btn btn-primary" %>
	    <% end %>
	  </div>
	</div>
</div>